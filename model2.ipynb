import os
import shutil
import random
from pathlib import Path

# path dataset ‡∏ï‡πâ‡∏ô‡∏â‡∏ö‡∏±‡∏ö (‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡πÄ‡∏õ‡πá‡∏ô path ‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô Google Drive ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì)
input_dir = Path("/content/drive/MyDrive/Dataset/img_removeBG/‡πÄ‡∏õ‡∏•‡∏∑‡∏≠‡∏Å‡∏°‡∏±‡∏á‡∏Ñ‡∏∏‡∏î")
output_dir = Path("/content/drive/MyDrive/Dataset/herb_dataset")  # ‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå train/val/test

# ‡∏™‡∏±‡∏î‡∏™‡πà‡∏ß‡∏ô train/val/test
train_ratio = 0.7
val_ratio = 0.2
test_ratio = 0.1

# ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå‡πÄ‡∏õ‡∏•‡πà‡∏≤ train/val/test
for split in ["train", "val", "test"]:
    (output_dir / split).mkdir(parents=True, exist_ok=True)

# ‡∏Å‡∏≥‡∏´‡∏ô‡∏î class (‡∏Å‡∏£‡∏ì‡∏µ‡∏°‡∏µ‡∏´‡∏•‡∏≤‡∏¢‡∏Ñ‡∏•‡∏≤‡∏™‡πÉ‡∏´‡πâ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ä‡∏∑‡πà‡∏≠‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà)
classes = ["‡πÄ‡∏õ‡∏•‡∏∑‡∏≠‡∏Å‡∏°‡∏±‡∏á‡∏Ñ‡∏∏‡∏î"]

for class_name in classes:
    class_input_dir = input_dir  # ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏Ñ‡∏•‡∏≤‡∏™‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏£‡∏ß‡∏°‡∏†‡∏≤‡∏û‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
    images = list(class_input_dir.glob("*.png")) + \
             list(class_input_dir.glob("*.jpg")) + \
             list(class_input_dir.glob("*.jpeg"))
    if len(images) == 0:
        print(f"‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏†‡∏≤‡∏û‡πÉ‡∏ô‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå {class_input_dir}")
        continue

    random.shuffle(images)
    n_total = len(images)
    n_train = int(n_total * train_ratio)
    n_val = int(n_total * val_ratio)

    train_files = images[:n_train]
    val_files = images[n_train:n_train+n_val]
    test_files = images[n_train+n_val:]

    # ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå
    def move_files(file_list, split):
        split_dir = output_dir / split / class_name
        split_dir.mkdir(parents=True, exist_ok=True)
        for f in file_list:
            shutil.copy(f, split_dir / f.name)

    move_files(train_files, "train")
    move_files(val_files, "val")
    move_files(test_files, "test")

print("‚úÖ Dataset ‡∏ñ‡∏π‡∏Å‡πÅ‡∏ö‡πà‡∏á‡πÄ‡∏õ‡πá‡∏ô train/val/test ‡πÅ‡∏•‡πâ‡∏ß")

